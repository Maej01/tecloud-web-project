<!-- main about section-->
<% if(pageID == 'ourTeamPage'){%>
    <h5 class="center" id="services_tip">Managing Partners</h5>
<% } %>
<!-- managing partners container -->
<div class="container">
    <div class="row">
        <% ourManagersData.forEach(function(member){ %>
            <div class="col s12 m4 l4">
                <% if(pageID == 'ourTeamPage'){ %>
                    <div class="card">
                        <div class="card-image responsive">
                            <img src="/images/teamImages/<%= member.shortname %>_tp.jpg">
                        </div>
                        <div class="card-content">
                            <span class="card-title center"><a href="/ourTeam/<%= member.shortname %>"><b><%= member.name %></b></a></span>
                            <h5 class="center"><%= member.role %></h5>
                            <div class="line center"></div>
                            <p class="hide-on-small-only"><%- member.summary %></p>
                            <div class="view-profile-btn center">
                                <a href="/ourTeam/<%= member.shortname %>">view profile</a>
                            </div>
                        </div>
                        <div class="card-action">
                            <span>Follow on</span>
                            <a href="#" class="tooltip" target="_blank" id="social_media_icons">
                                <i class="fab fa-facebook"></i><span class="tooltip-text">Facebook</span></a>
                            <a href="#" class="tooltip" target="_blank"  id="social_media_icons">
                                <i class="fab fa-twitter"></i><span class="tooltip-text">Twitter</span></a> 
                            <a href="#" class="tooltip" target="_blank" id="social_media_icons">
                                <i class="fab fa-linkedin"></i><span class="tooltip-text">Linkedin</span></a>
                            <a href="#" class="tooltip" target="_blank" id="social_media_icons">
                                <i class="fab fa-instagram"></i><span class="tooltip-text">Instagram</span></a>
                        </div>
                    </div>
                <%}%>
            </div>

            <!-- changing the page view if the page not matches the ourTeamPage -->
            <% if(pageID == 'memberDetail') {%>
                <div class="row">
                    <div class="col s12 m8 push-m1 description"><%- member.description %></div>
                    <div class="col s12 m3 pull-m2">
                        <img src="/images/teamImages/<%= member.shortname %>.jpg" alt="Photo of <%= member.name %>" class="materialboxed memberBigImg">
                    </div>
                </div>
            <% } %>
        <%});%>
    </div>
</div>