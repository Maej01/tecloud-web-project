<html lang="en">
<head>
    <% include partials/template/head.ejs %> <!-- including the head template-->
</head>
<body id="<%= pageID %>">
    <% include partials/template/header.ejs %> <!-- including the header template -->
    <!-- farmers section-->
    <div class="container">
        <div class="row">
            <!-- checking if the current pageID matches farmers-->
            <% if (pageID == 'farmers' ){ %>
                <h5 class="center">Welcome to the farmers section</h5>
                <p class="center">get to know the farmers who are working relentlessly to provide you with good products</p>
                <!-- -->
                <div class="col s6 l6 push-l2 farmers-btn">
                    <a href="/farmers"><button class="btn-small blue">Sponsored Farmers</button></a>
                    
                </div>
                <div class="col s6 l6 farmers-btn">
                    <a href=""><button class="btn-small blue">Unsponsored Farmers</button></a>
                </div>

                <!-- loop the first three -->

            <% } else { %>
                <h5 class="center">Farmer Info</h5>
            <% } %>
        </div>
            <!-- looping through the farmers_data json file -->
            <div class="row ">
             <% farmer.forEach(function(item){ %>
            
                    <div class="col s4 farmer">
                        <% if (pageID == 'farmers') { %>
                            <h4><a href="/farmers/<%= item.shortname %>"><%= item.name %></a></h4>
                            <p>
                                <a href="/farmers/<%= item.shortname %>">
                                <img id="img-farmer" src="/images/farmers/<%= item.shortname %>_tc.jpg" alt="Farmer">
                                </a>
                            </p> 
                            <!-- displaying the datas from the farmers_data josn file -->
                            <h5>Product: <%= item.product %></h5>
                            <h5>Location: <%= item.location %></h5>
                            <!-- <hr> -->
                        <% } %>
                    </div>
                    
                    <!-- <div class="col l7">
                        <p><%= item.summary %></p>
                    </div> -->
                    
                    <!-- -->
                        <!-- checking if we are in the farmers page -->
                        <% if (pageID == 'farmers') { %>
                            <!-- <div class="col l7">
                                <p><%= item.summary %></p> displaying the summary in the farmers page 
                             </div> -->
                        <% } else { %>
                            <div class="row">
                                <div class="col l8">
                                    <a href="/farmers/<%= item.shortname %>">
                                        <img id="farmer-info-img" src="/images/farmers/<%= item.shortname %>.jpg" alt="Farmer">
                                    </a>
                                </div>
                                <div class="col l4 farmer-desc">
                                    <p>Name : <%= item.name%></p>
                                    <p>Product: <%= item.product%></p>
                                    <p>Location: <%= item.location%></p>
                                    <p>Exprience: <%= item.exprience%></p>
                                </div>
                            </div> 
                            
                            <%- item.description %>  <!-- displaying the description in the farmer detail -->
                           <i class="material-icons left prefix">chevron_left</i><a href="/farmers">go back</a>
                        <% } %> 
            <% }); %> <!-- end of for each loop -->
        </div><!-- end of main row -->
    </div><!-- end of container -->

    <!-- including the js scripts template -->
    <% include partials/template/jsscripts.ejs %>

</body>
    <!-- including the footer template -->
    <% include partials/template/footer.ejs %>
</html>